{
    "compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "out",
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"pretty": true,
        "declaration": true,
        "skipLibCheck": true,
        "types": ["node"]
	},
    "compileOnSave": true,
    "files": [
        "./node_modules/@types/mocha/index.d.ts",
        "./node_modules/@types/node/index.d.ts"
    ],
    "include": [
        "lib/**/*.ts"
    ],
    "exclude": [
        ".vscode",
        "node_modules",
        "dist"
    ]
}